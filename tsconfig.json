{
  "compilerOptions": {
    "jsx": "react-jsx", // "react" if using React versions below 17
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "lib": ["DOM", "ES2015"], // Ensure DOM library is included
    "downlevelIteration": true, // Necessary for Set iteration
    "moduleResolution": "node",
    "skipLibCheck": true, // Skip type checking for library files
    "strict": true
  },
  "include": ["src"]
}
